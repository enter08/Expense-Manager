  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/expenses" class="list-group-item active">
            All Expenses 
          </a>
          <% @categories.each do |c| %>
            <%= link_to expenses_path(category: c.id), class: "list-group-item" do %>
              <%= c.name %> <span class="badge"><%= counts(c.id) %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    
      <div class="col-md-9">
        <% @expenses.each_with_index do |expense, index| %>
          <% if index % 4 == 0 %>
            <div class="row">
          <% end %>
            <div class="col-md-3">
              <div class="thumbnail">
                <div class="caption">
                  <h3><%= expense.category.name %></h3>
                  <%= expense.date.strftime("%d. %B,  %Y") %>
                </div>
                <%= image_tag expense.bill.url(:medium), size: '170x105' %>
                <div class="caption">
                  <p><center><h4><%= expense.expense_value %>â‚¬.</h4></center></p>
                  <p align="center">
                    <%= link_to expense_path(expense), class: "btn btn-primary", role: "button" do %>
                        <span style="font-size:10px;">Show</span>
                     <% end %>
                    <%= link_to edit_expense_path(expense), class: "btn btn-default", role: "button" do %>
                      <span style="font-size:10px;">Edit</span>
                    <% end %>
                    <%= link_to expense_path(expense), class: "btn btn-default", method: :delete, data: {confirm: 'Are you sure?', role: "button"} do %>
                      <span style="font-size:10px;">Delete</span>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
          <% if index % 4 == 3 %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<center><%= will_paginate @expenses %></center>